[flake8]
# Configuración de Flake8 siguiendo PEP 8 y buenas prácticas Django
max-line-length = 120
exclude =
    .git,
    __pycache__,
    */migrations/*,
    */staticfiles/*,
    */media/*,
    .venv,
    venv,
    env,
    .pytest_cache,
    .coverage

# Códigos de error a ignorar
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Códigos de error a activar
select = B,C,E,F,W,T4,B9

# Complejidad ciclomática máxima
max-complexity = 10

# Por archivo
per-file-ignores =
    __init__.py:F401
    settings.py:E501
    */tests/*.py:F401,F811
